@model List<Role>
@{
    ViewBag.Title = "Role Managerment";

}
<div class="card-header row py-3">
    <div>
        <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
    </div>
    <div class="ml-auto" style="padding-right:30px">
        <a asp-controller="Product" asp-action="Create" class="btn btn-warning" style="width:150px">Create</a>
    </div>
</div>

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <td>Id</td>
            <td>RoleName</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoleId</td>
                <td>@item.RoleName</td>
                <td>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@($"exampleModalLong{@item.RoleId}")">
                        Delete
                    </button>
                    <a type="button" class="btn btn-primary" asp-controller="Role" asp-action="Edit" asp-route-id="@item.RoleId">
                        Edit
                    </a>
                    <div class="modal fade" id="@($"exampleModalLong{@item.RoleId}")" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Delete this role</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                    <a type="button" class="btn btn-primary" asp-controller="Role" asp-action="Delete" asp-route-id="@item.RoleId">Yes</a>
                                </div>
                            </div>
                        </div>
                    </div>

            </tr>
        }

    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').dataTable();
        });
    </script>
}
