@{
    ViewBag.Title = "Page Not Found";
}
<div style="padding-bottom:300px;margin-top:260px;">
    <div class="alert alert-danger mt-2">
        <h1>@ViewBag.ErrorMessage</h1>
        <hr />
        <h5>Please try again or contact to Admin</h5>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning" style="width:auto">
        Back to Home
    </a>
</div>